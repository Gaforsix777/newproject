@page
@model RazorPagesDB.Pages.DetailsModel
@{
    ViewData["Title"] = "Detalle de Tarea";

    string BadgeClase(string? estado) => (estado ?? "").Trim().ToLower() switch
    {
        "pendiente" => "badge bg-warning-subtle text-dark",
        "en progreso" => "badge bg-info-subtle text-dark",
        "completada" => "badge bg-success-subtle text-dark",
        _ => "badge bg-secondary-subtle text-dark"
    };
}

<div class="card border-0 shadow-sm mt-3">
    <div class="card-body">
        <div class="d-flex align-items-center justify-content-between mb-3">
            <h2 class="h5 mb-0">Detalle de Tarea</h2>
            <div class="d-flex gap-2">
                <a asp-page="./Edit" asp-route-id="@Model.Tarea.Id" class="btn btn-primary btn-sm">Editar</a>
                <a asp-page="./Index" class="btn btn-outline-secondary btn-sm">Volver a la lista</a>
            </div>
        </div>

        <div class="row g-3">
            <div class="col-md-6">
                <div class="border rounded p-3">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">@Html.DisplayNameFor(m => m.Tarea.nombreTarea)</dt>
                        <dd class="col-sm-8">@Model.Tarea.nombreTarea</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(m => m.Tarea.fechaVencimiento)</dt>
                        <dd class="col-sm-8">@Model.Tarea.fechaVencimiento.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(m => m.Tarea.estado)</dt>
                        <dd class="col-sm-8">
                            <span class="@BadgeClase(Model.Tarea.estado)">@Model.Tarea.estado</span>
                            @if (Model.Tarea.fechaVencimiento.Date < DateTime.Today && !string.Equals(Model.Tarea.estado, "Completada", StringComparison.OrdinalIgnoreCase))
                            {
                                <span class="badge bg-danger-subtle text-danger ms-2">Vencida</span>
                            }
                        </dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(m => m.Tarea.IdUsuario)</dt>
                        <dd class="col-sm-8">@Model.Tarea.IdUsuario</dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="mt-3">
            <a asp-page="./Edit" asp-route-id="@Model.Tarea.Id" class="btn btn-primary">Editar</a>
            <a asp-page="./Delete" asp-route-id="@Model.Tarea.Id" class="btn btn-outline-danger">Eliminar</a>
            <a asp-page="./Index" class="btn btn-outline-secondary">Volver</a>
        </div>
    </div>
</div>
