@page
@model RazorPagesDB.Pages.DeleteModel
@{
    ViewData["Title"] = "Eliminar Tarea";
    string BadgeClase(string estado) => estado?.Trim().ToLower() switch
    {
        "pendiente" => "badge bg-warning-subtle text-dark",
        "en progreso" => "badge bg-info-subtle text-dark",
        "completada" => "badge bg-success-subtle text-dark",
        _ => "badge bg-secondary-subtle text-dark"
    };
}

<div class="card border-0 shadow-sm mt-3">
    <div class="card-body">
        <h2 class="h5 mb-3">Eliminar Tarea</h2>
        <p class="text-muted">¿Estás seguro que deseas eliminar este registro?</p>

        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Tarea.nombreTarea)</dt>
            <dd class="col-sm-9">@Model.Tarea.nombreTarea</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Tarea.fechaVencimiento)</dt>
            <dd class="col-sm-9">@Model.Tarea.fechaVencimiento.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Tarea.estado)</dt>
            <dd class="col-sm-9">
                <span class="@BadgeClase(Model.Tarea.estado)">@Model.Tarea.estado</span>
            </dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Tarea.IdUsuario)</dt>
            <dd class="col-sm-9">@Model.Tarea.IdUsuario</dd>
        </dl>

        <form method="post" class="mt-3">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Tarea.Id" />
            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a asp-page="./Index" class="btn btn-outline-secondary">Cancelar</a>
        </form>
    </div>
</div>
