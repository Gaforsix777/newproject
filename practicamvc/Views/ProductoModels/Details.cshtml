@model practicamvc.Models.ProductoModel
@{
    ViewData["Title"] = "Detalle de producto";
}
<div class="container py-4">
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb small">
            <li class="breadcrumb-item"><a asp-action="Index">Productos</a></li>
            <li class="breadcrumb-item active" aria-current="page">Detalle</li>
        </ol>
    </nav>

    <div class="row justify-content-center">
        <div class="col-lg-7 col-xl-6">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="mb-1">@Model.Nombre</h5>
                    <p class="text-muted small mb-4">Información del producto</p>

                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-muted">Descripción</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(m => m.Descripcion)</dd>

                        <dt class="col-sm-4 text-muted">Precio</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(m => m.Precio)</dd>

                        <dt class="col-sm-4 text-muted">Stock</dt>
                        <dd class="col-sm-8">
                            @{
                                var stockClass = Model.Stock <= 0 ? "bg-danger-subtle text-danger" :
                                Model.Stock < 10 ? "bg-warning-subtle text-warning" :
                                "bg-success-subtle text-success";
                            }
                            <span class="badge rounded-pill @stockClass px-3">@Model.Stock</span>
                        </dd>
                    </dl>

                    <div class="mt-4 d-flex gap-2">
                        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary btn-round px-3">Editar</a>
                        <a asp-action="Index" class="btn btn-outline-secondary btn-round px-3">Volver al listado</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
