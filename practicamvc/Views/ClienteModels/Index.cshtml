@model IEnumerable<practicamvc.Models.ClienteModel>
@{
    ViewData["Title"] = "Clientes";
    var filtro = ViewData["FiltroActual"] as string;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="mb-0">Clientes</h3>
    <a asp-action="Create" class="btn btn-primary">Nuevo Cliente</a>
</div>

<form method="get" class="row g-2 mb-3">
    <div class="col-sm-6 col-md-4">
        <input name="buscar" value="@filtro" class="form-control" placeholder="Buscar por nombre o email..." />
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-outline-primary">Buscar</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Limpiar</a>
    </div>
</form>

<div class="card shadow-sm border-0 rounded-4">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>Nombre</th>
                    <th>Email</th>
                    <th>Dirección</th>
                    <th style="width:180px;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Nombre</td>
                        <td>@item.Email</td>
                        <td>@item.Direccion</td>
                        <td class="text-end">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Ver</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Editar</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
