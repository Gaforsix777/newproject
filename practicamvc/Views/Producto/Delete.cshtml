@model practicamvc.Models.ProductoModel
@{
    ViewData["Title"] = "Eliminar producto";
}
<div class="container py-4">
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb small">
            <li class="breadcrumb-item"><a asp-action="Index">Productos</a></li>
            <li class="breadcrumb-item active" aria-current="page">Eliminar</li>
        </ol>
    </nav>

    <div class="row justify-content-center">
        <div class="col-lg-7 col-xl-6">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <div class="alert alert-warning d-flex align-items-start gap-2" role="alert">
                        <span class="logo-dot"></span>
                        <div>
                            <strong>Confirmación requerida.</strong>
                            <div class="small">Estás a punto de eliminar este producto. Esta acción no se puede deshacer.</div>
                        </div>
                    </div>

                    <dl class="row">
                        <dt class="col-sm-4 text-muted">Nombre</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(m => m.Nombre)</dd>

                        <dt class="col-sm-4 text-muted">Descripción</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(m => m.Descripcion)</dd>

                        <dt class="col-sm-4 text-muted">Precio</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(m => m.Precio)</dd>

                        <dt class="col-sm-4 text-muted">Stock</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(m => m.Stock)</dd>
                    </dl>

                    <form asp-action="Delete" class="mt-3 d-flex gap-2">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger btn-round px-3">Eliminar</button>
                        <a asp-action="Index" class="btn btn-outline-secondary btn-round px-3">Cancelar</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
