@model practicamvc.Models.ProductoModel
@{
    ViewData["Title"] = "Editar producto";
}
<div class="container py-4">
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb small">
            <li class="breadcrumb-item"><a asp-action="Index">Productos</a></li>
            <li class="breadcrumb-item active" aria-current="page">Editar</li>
        </ol>
    </nav>

    <div class="row justify-content-center">
        <div class="col-lg-7 col-xl-6">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="mb-1">Editar producto</h5>
                    <p class="text-muted mb-4 small">Actualiza la información y guarda los cambios.</p>

                    <form asp-action="Edit" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="form-floating mb-3">
                            <input asp-for="Nombre" class="form-control" placeholder="Nombre" autocomplete="off" />
                            <label asp-for="Nombre"></label>
                            <span asp-validation-for="Nombre" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Descripcion" class="form-control" placeholder="Descripción" autocomplete="off" />
                            <label asp-for="Descripcion"></label>
                            <span asp-validation-for="Descripcion" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Precio"
                                   class="form-control"
                                   placeholder="0,00"
                                   inputmode="decimal"
                                   autocomplete="off"
                                   asp-format="{0:N2}" />
                            <label asp-for="Precio"></label>
                            <span asp-validation-for="Precio" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="Stock" class="form-control" placeholder="0" inputmode="numeric" />
                            <label asp-for="Stock"></label>
                            <span asp-validation-for="Stock" class="text-danger small"></span>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary btn-round px-4">Guardar</button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-round px-3">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        if (window.jQuery && $.validator && $.validator.methods) {
            var origRange = $.validator.methods.range;
            $.validator.methods.number = function (value, element) {
                if (this.optional(element)) return true;
                var val = value.replace(/\s/g, '').replace(/\./g, '').replace(',', '.');
                return !isNaN(val) && isFinite(val);
            };
            $.validator.methods.range = function (value, element, param) {
                var val = value.replace(/\s/g, '').replace(/\./g, '').replace(',', '.');
                return origRange.call(this, val, element, param);
            };
        }
    </script>
}
