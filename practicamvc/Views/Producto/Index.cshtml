@model IEnumerable<practicamvc.Models.ProductoModel>
@{
    ViewData["Title"] = "Productos";
}

<div class="container py-4">
    <div class="card shadow-sm border-0">
        <div class="card-body d-flex flex-wrap gap-2 align-items-center justify-content-between">
            <div>
                <h5 class="mb-0">Productos</h5>
                <p class="text-muted mb-0 small">Gestión de inventario y precios</p>
            </div>
            <a asp-action="Create" class="btn btn-primary btn-round px-3">+ Nuevo producto</a>
        </div>

        <div class="table-responsive border-top">
            <table class="table align-middle mb-0">
                <thead class="bg-body">
                    <tr>
                        <th>Nombre</th>
                        <th>Descripción</th>
                        <th class="text-end">Precio</th>
                        <th class="text-center">Stock</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            var stockClass = item.Stock <= 0 ? "bg-danger-subtle text-danger" :
                            item.Stock < 10 ? "bg-warning-subtle text-warning" :
                            "bg-success-subtle text-success";
                            <tr>
                                <td class="fw-medium">@item.Nombre</td>
                                <td class="text-muted">@item.Descripcion</td>
                                <td class="text-end">@item.Precio</td>
                                <td class="text-center">
                                    <span class="badge rounded-pill @stockClass px-3">@item.Stock</span>
                                </td>
                                <td class="text-end">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-round">Ver</a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-round">Editar</a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-round">Borrar</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
