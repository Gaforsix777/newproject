@{
    ViewData["Title"] = "Inicio";
}
<section class="py-5">
    <div class="container">
        <div class="row align-items-center g-5">
            <div class="col-lg-6">
                <h1 class="display-5 fw-bold text-primary mb-3">Sistema de Pedidos</h1>
                <p class="lead text-secondary">
                    Administra usuarios, productos y pedidos con un flujo simple:
                    validación de stock, totales automáticos y estados del pedido.
                </p>
                <div class="d-flex gap-2">
                    <a asp-controller="Products" asp-action="Index" class="btn btn-primary btn-lg">
                        <i class="bi bi-bag"></i> Ver productos
                    </a>
                    @if (User.IsInRole("admin") || User.IsInRole("empleado"))
                    {
                        <a asp-controller="Orders" asp-action="Create" class="btn btn-outline-primary btn-lg">
                            <i class="bi bi-plus-circle"></i> Nuevo pedido
                        </a>
                    }
                </div>
            </div>
            <div class="col-lg-6">
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <h5 class="card-title"><i class="bi bi-clipboard-check"></i> Resumen</h5>
                        <p class="mb-2 text-muted">Usa el menú superior para empezar:</p>
                        <ul class="mb-0">
                            <li>Productos con filtros y validaciones</li>
                            <li>Pedidos con cálculo de totales y estado</li>
                            <li>Usuarios (solo admin)</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
